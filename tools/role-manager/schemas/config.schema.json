{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration Schema",
  "description": "JSON Schema for Configuration files in the Claude Role Framework",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration schema version"
    },
    "activeRoles": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of currently active role IDs"
    },
    "customRoles": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/customRole"
      },
      "description": "User-defined custom roles"
    },
    "preferences": {
      "type": "object",
      "description": "User preferences for role behavior",
      "properties": {
        "autoActivate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically activate roles from configuration on startup"
        },
        "conflictResolution": {
          "type": "string",
          "enum": ["merge", "priority", "explicit"],
          "default": "merge",
          "description": "Strategy for resolving conflicts when multiple roles are active"
        },
        "skillPriority": {
          "type": "string",
          "enum": ["role-defined", "user-defined"],
          "default": "role-defined",
          "description": "Priority source for skill configurations"
        }
      }
    }
  },
  "definitions": {
    "customRole": {
      "type": "object",
      "required": ["id", "name", "domain", "description"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*$",
          "description": "Unique custom role identifier (kebab-case)"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable custom role name"
        },
        "domain": {
          "type": "string",
          "description": "Parent domain ID for the custom role"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Description of the custom role"
        },
        "extends": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of role IDs to extend from"
        },
        "additionalSkills": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional skills to include beyond inherited ones"
        },
        "additionalMCPs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional MCP servers to include beyond inherited ones"
        }
      }
    }
  }
}
