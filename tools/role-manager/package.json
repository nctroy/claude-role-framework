{
  "name": "@claude/role-manager",
  "version": "1.0.0",
  "description": "CLI tool for managing Claude roles, domains, and configurations",
  "main": "lib/index.js",
  "bin": {
    "claude-role": "bin/claude-role.js"
  },
  "scripts": {
    "start": "node bin/claude-role.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint lib bin tests",
    "lint:fix": "eslint lib bin tests --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "validate": "npm run lint && npm run format:check && npm run test",
    "docs": "jsdoc -c jsdoc.json",
    "build": "echo 'No build step required for Node.js CLI'",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "claude",
    "cli",
    "role",
    "management",
    "skills",
    "mcp",
    "ai",
    "assistant",
    "development",
    "tools"
  ],
  "author": "Claude Role Framework Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/claude-role-framework/role-manager.git"
  },
  "bugs": {
    "url": "https://github.com/claude-role-framework/role-manager/issues"
  },
  "homepage": "https://github.com/claude-role-framework/role-manager#readme",
  "dependencies": {
    "commander": "^11.1.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "cosmiconfig": "^8.3.6",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "inquirer": "^8.2.6",
    "table": "^6.8.1",
    "fs-extra": "^11.2.0",
    "fast-deep-equal": "^3.1.3",
    "semver": "^7.5.4",
    "yaml": "^2.3.4",
    "minimatch": "^9.0.3",
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mock-fs": "^5.2.0",
    "supertest": "^6.3.3",
    "jsdoc": "^4.0.2",
    "@types/node": "^20.10.7"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!lib/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "bin/",
    "lib/",
    "schemas/",
    "README.md",
    "LICENSE"
  ]
}
